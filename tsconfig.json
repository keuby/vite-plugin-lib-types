{
  "extends": "@vue/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2021",
    "lib": ["ES2021"],
    "types": ["node"],
    "declaration": true,
    "ignoreDeprecations": "5.0",
    "moduleResolution": "Node",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
